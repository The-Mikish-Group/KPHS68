            </div>
        </div>

        <!-- Selection Choices -->
        <div class="collapse navbar-collapse flex-grow-1 text-right px-2" id="navbarToggler">

            <ul class="ps-4 navbar-nav ms-auto flex-nowrap">

                <!-- Home -->
                <li class="nav-item">
                    <a class="@active01 nav-link nav-link-fs" href="/"><img alt="" class="show-me-at-the-bottom home-size px-2 pb-2" src="~/lib/svg/buttons/home.svg" />Home</a>
                </li>

                <!-- Gallery -->
                <li class="nav-item">
                    <a class="@active13 nav-link nav-link-fs" href="~/KPHS68Combo"><img alt="" class="show-me-at-the-bottom home-size px-2 pb-2" src="~/lib/svg/cards/pictures-white.svg" />Gallery</a>
                </li>
            </ul>
        </div>
    </nav>


    @* <div id="projector"></div> *@
    <div id="top_grad">

        <div class="row mx-auto m-0" id="pageHeader">

            <div class="col-3">
                <img src="~/resources/kphslogo.png" width="200" height="195" alt="KPHS Class of 1968" />
            </div>

            <div class="col-8 pt-2">
