@{
    // This Site
    string siteURL = "https://KelvynPark68.com/";

    // Set Site Name
    string siteName = "Kalvyn Park Class of 1968";

    // Short name appears in Nav Bar at top on Phones... Can be longer like "Avon Park Nazarene" or "Avon Park Naz"
    string siteNameShort = "KPHS - 68";

    // Overall Organization
    string siteOrganization = "KPHS68";

    // Set default values
    string pageTitle = ViewBag.Message + " | " + siteNameShort;
    string description = "WELCOME! to the website of Kelvyn Park High School 1968 graduating class and friends. We hope to remain in contact with each other as much as possible through this site.";
    string folder = "";

    //Share Image and ShareImage folder
    string shareImage = "About-ls.jpg";
    string shareImageFolder = siteURL + "Gallery/_ShareImages/";
    string imageWidth = "1200";
    string imageHeight = "630";

    // 'Active Link' variables to keep track of the active link
    string active01 = "";
    string active02 = "";
    // string active03 = "";
    // string active04 = "";
    string active05 = "";
    string active06 = "";
    string active07 = "";
    string active08 = "";
    // string active09 = "";
    // string active10 = "";
    // string active11 = "";
    string active12 = "";
    string active13 = "";
    string active14 = "";
    string active15 = "";
    // string active16 = "";

    // Change Link Share card information based on the View link shared
    switch (ViewBag.Message)
    {
        case "Home":
            {
                pageTitle = siteNameShort;
                folder = "";
                active01 = "active";
                break;
            }
        case "Contact":
            {
                pageTitle = "Contact Us";
                folder = "Info/Contact/";
                description = "Please contact us and we will respond!";
                active02 = "active";
                break;
            }
        case "Classmates":
            {
                pageTitle = "Classmates";
                description = "Classmates Area";
                folder = "Info/Members/";
                active05 = "active";
                break;
            }
        case "Gallery":
            {
                pageTitle = "Our Gallery";
                description = "Our Online Gallery";
                folder = "Gallery/";
                active06 = "active";
                break;
            }
        case "Privacy":
            {
                pageTitle = "Privacy Policy";
                description = "Our Privacy Policy";
                folder = "Info/Privacy";
                active07 = "active";
                break;
            }
        case "TOS":
            {
                pageTitle = "Terms of Service";
                description = "Our terms of Service";
                folder = "Info/TOS";
                active08 = "active";
                break;
            }
        case "Links":
            {
                pageTitle = "More Links";
                folder = "Info/Links";
                active12 = "active";
                break;
            }
    }

    // Page Share Settings -- (shows on "PageShare" card when a link is shared)
    string ogSite_Name = siteOrganization;
    string ogTitle = pageTitle;
    string ogDescription = description;
    string ogURL = siteURL + folder;
    string canonical = siteURL + folder;

    string ogImage = shareImageFolder + shareImage;
    string ogImageWidth = imageWidth;
    string ogImageHeight = imageHeight;
}

<!DOCTYPE html>
<html lang="en">
<head>

    <!-- Site Name -->
    <title>@pageTitle</title>

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="description" content="@description" />
    <link rel="canonical" href="@canonical" />

    <!-- Google Site Verification -->
    @* <meta name="google-site-verification" content="wdaytYpXJY1e9iWkOJXCS6HBuc0aCDxz--VJTfwTT3E" /> *@

    <!-- FavIcon(s) - (all your Logo... plenty of them!) -->
    <link rel="icon" type="image/x-icon" href="../../resources/icons/favicon.ico" sizes="64x64" />
    <link rel="icon" type="image/png" href="../../resources/icons/favicon_small.png" sizes="16x16" />
    <link rel="icon" type="image/png" href="../../resources/icons/favicon_medium.png" sizes="32x32" />
    <link rel="icon" type="image/png" href="../../resources/icons/favicon_large.png" sizes="64x64" />
    <link rel="apple-touch-icon" sizes="152x152" href="../../resources/icons/small.png" />
    <link rel="apple-touch-icon" sizes="167x167" href="../../resources/icons/medium.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="../../resources/icons/kphslogo.png" />

    <!-- Default FB App ID unused -->
    <meta property="fb:app_id" content="966242223397117" />

    <!-- Link Share Setup -->
    <!-- This info is used for the card shown when you share a link on the web (I call it "Link Share"). -->
    <!-- (more info here: https://ogp.me/) -->
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:title" content="@ogTitle" />
    <meta property="og:determiner" content="The" />
    <meta property="og:description" content="@ogDescription" />
    <meta property="og:site_name" content="@ogSite_Name" />
    <meta property="og:url" content="@ogURL" />
    <meta property="og:image:url" content="@ogImage" />
    <meta property="og:image:alt" content="Logo Image" />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:image:width" content=@ogImageWidth />
    <meta property="og:image:height" content=@ogImageHeight />

    <!-- Twitter Link Share Setup -->
    <!-- (more info here: https://developer.twitter.com/en/docs/twitter-for-websites/cards/overview/markup) -->
    <meta name="twitter:card" content="photo" />
    <meta name="twitter:title" content="@ogTitle" />
    <meta name="twitter:image" content="@ogImage" />
    <meta name="twitter:image:width" content=@ogImageWidth />
    <meta name="twitter:image:height" content=@ogImageHeight />

    <!-- Bootstrap and JQuery (Local) -->
    @* <script src="~/lib/jquery/dist/jquery.min.js"></script> *@
    @* <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" /> *@
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@

    <!-- Bootstrap and JQuery (Web) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

    <!-- CSS Link Setup -->
    <link rel="stylesheet" href="~/lib/css/colors.css" />
    <link rel="stylesheet" href="~/lib/css/fontsize.css" />
    <link rel="stylesheet" href="~/lib/css/mycards.css" />
    <link rel="stylesheet" href="~/lib/css/sizes.css" />
    <link rel="stylesheet" href="~/lib/css/spacing.css" />
    <link rel="stylesheet" href="~/lib/css/site.css" />

    <!-- Site.js -->
    <script type="text/javascript" src="~/lib/js/site.js" asp-append-version="true"></script>

</head>
