    <nav class="navbar navbar-expand-lg navbar-dark bg-gray-darker px-0">
        <div class="d-flex flex-grow-1">

            <!-- Set to show on lg -->
            <a style="text-decoration: none" class="text-decoration-none navbar-brand navbar-text nav-text-fs text-white d-none d-lg-inline-block ps-2" href="/">@siteName</a>

            <!-- Set to show on sm -->
