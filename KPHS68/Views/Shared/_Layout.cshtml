                    </ul>
                </div>

                <!-- Features -->
                <div class="col-4">
                    <h6 class="navbar-text navbar-text-footer-fs text-white mb-0">Features</h6>
                    <ul class="navbar-nav ms-auto flex-nowrap ps-2">

                        <!-- Email Sign-up -->
                        <li class="nav-item text-light">
                            <a class="@active14 nav-link footer-fs" href="https://mailchi.mp/5dc417814456/apncsignup" target="_blank">Email Sign-up</a>
                        </li>

                        <!-- Blog -->
                        <li class="nav-item text-light">
                            <a class="@active15 nav-link footer-fs" href="https://KPHS68.wordpress.com/" target="_blank">Blog</a>
                        </li>

                    </ul>
                </div>

                <!-- Links -->
                <div class="col-4 pe-0">
                    <h6 class="navbar-text navbar-text-footer-fs text-white mb-0">Links</h6>
                    <ul class="navbar-nav ms-auto flex-nowrap ps-2">

                        <!-- Gallery -->
                        <li class="nav-item text-light">
