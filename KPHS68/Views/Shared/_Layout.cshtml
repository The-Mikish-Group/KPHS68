                <h2 class="text-end text-dark">KelvynPark68.com</h2>
            </div>
        </div>        

            <!-- Main container (Views) -->
            <div class="container" id="maincontainer"> <!-- Main Container -->

                <main role="main" class="p-0"><!-- Main -->

                <div id="content"><!-- Start View Content -->

                    @RenderBody()

                    <div id="footer"><!-- Start view footer -->

                        <div id="eraser"></div>
                        <div id="chalk"></div>
                        <div id="ruler"></div>
                        <p>&copy; 2024 KPHS Class of '68 <a href="#" class="084908D8-730C-4F75-B27B-1D611B31365A">Contact Us</a></p>

                    </div><!-- End View footer -->

                </div><!-- End View Content -->

                </main><!-- End Main -->

            </div><!-- End Main Container -->            

    </div>

    <!-- Bottom site Footer Navbar Menu -->
    <footer class="navbar navbar-dark border-top bg-gray-darker visually-hidden" role="contentinfo" aria-label="Site footer">

        <div class="container text-right">
            <div class="row w-100 gx-0 gx-lg-5">

                <!-- Info -->
                <div class="col-4">
                    <h6 class="navbar-text navbar-text-footer-fs text-white mb-0">Info</h6>
                    <ul class="navbar-nav ms-auto flex-nowrap ps-2">

                        <!-- Home -->
                        <li class="nav-item text-light">
                            <a class="@active01 nav-link footer-fs text-nowrap" href="/">About Us</a>
                        </li>

                        <!-- Contact -->
                        <li class="nav-item text-light">
                            <a class="@active02 nav-link footer-fs text-nowrap" href="https://www.classcreator.com/Chicago-IL-Kelvyn-Park-1968/class_contact.cfm">Contact Us</a>
                        </li>

                        <!-- Privacy -->
                        <li class="nav-item text-light">
                            <a class="@active07 nav-link footer-fs text-nowrap" href="/Info/Privacy">Privacy Policy</a>
                        </li>

                        <!-- TOS -->
                        <li class="nav-item text-light">
                            <a class="@active08 nav-link footer-fs" href="/Info/TOS">Terms of Service</a>
